{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 600,
    "height": 400,
    "title": "Scatter Plot of AQI Value by Category with Selection",
    "data": {
      "url": "globalairpollution.csv",
      "format": {"type": "csv"}
    },
    "params": [
      {
        "name": "categorySelection",
        "value": "All",
        "bind": {
          "input": "select",
          "options": ["All", "Good", "Moderate", "Unhealthy for Sensitive Groups", "Unhealthy", "Very Unhealthy", "Hazardous"],
          "name": "Select Ozone AQI Category: "
        }
      }
    ],
    "transform": [
      {
        "filter": "categorySelection == 'All' || datum['Ozone AQI Category'] == categorySelection"
      }
    ],
    "mark": "circle",
    "encoding": {
      "x": {
        "field": "Ozone AQI Category",
        "type": "nominal",
        "title": "Ozone AQI Category"
      },
      "y": {
        "field": "Ozone AQI Value",
        "type": "quantitative",
        "title": "Ozone AQI Value"
      },
      "color": {
        "field": "Ozone AQI Category",
        "type": "nominal",
        "title": "Ozone AQI Category"
      },
      "size": {
        "field": "Ozone AQI Value",
        "type": "quantitative",
        "title": "Size by Ozone AQI"
      },
      "tooltip": [
        {"field": "City", "type": "nominal", "title": "City"},
        {"field": "Country", "type": "nominal", "title": "Country"},
        {"field": "Ozone AQI Value", "type": "quantitative", "title": "Ozone AQI Value"}
      ]
    }
  }
  