{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 600,
    "height": 400,
    "title": "Bottom 10 Countries by Lowest AQI Value",
    "data": {
      "url": "https://raw.githubusercontent.com/Archercool/FIT3179ass2/refs/heads/main/Datasets/globalairpollution.csv",
      "format": {"type": "csv"}
    },
    "transform": [
      {
        "aggregate": [{
          "op": "mean",  
          "field": "AQI Value",
          "as": "Min AQI Value"
        }],
        "groupby": ["Country"]  
      },
      {
        "window": [{
          "op": "rank",
          "as": "rank"
        }],
        "sort": [{
          "field": "Min AQI Value",
          "order": "ascending"  
        }]
      },
      {
        "filter": "datum.rank <= 10"  
      }
    ],
    "mark": "circle",  
    "encoding": {
      "x": {
        "field": "Country",
        "type": "nominal",
        "title": "Country",
        "axis": {"labelAngle": -45},  
        "sort": "-y"
      },
      "y": {
        "field": "Min AQI Value",
        "type": "quantitative",
        "title": "Min AQI Value"
      },
      "size": {
        "field": "Min AQI Value",
        "type": "quantitative",
        "title": "Size by AQI",
        "scale": {"range": [100, 1000]}  
      },
      "color": {
        "field": "Country",
        "type": "nominal",
        "legend": null  
      },
      "tooltip": [
        {"field": "Country", "type": "nominal", "title": "Country"},
        {"field": "Min AQI Value", "type": "quantitative", "title": "Min AQI Value"}
      ]
    }
  }
  
